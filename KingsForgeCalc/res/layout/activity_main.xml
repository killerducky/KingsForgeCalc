<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:text="Craft Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="bottom|center_horizontal"
    />
    
    <GridView
        android:id="@+id/craftcard_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="50dp"
        android:numColumns="auto_fit" >
    </GridView>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="bottom|center_horizontal"
    />
    
    <GridView
        android:id="@+id/craftcard_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="50dp"
        android:numColumns="auto_fit" >
    </GridView>

    <TextView
        android:text="Supply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
    />
    
    <GridView
        android:id="@+id/supply_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="50dp"
        android:numColumns="auto_fit" >
    </GridView>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center"
    />
    
    <GridView
        android:id="@+id/supply_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="70dp"
        android:numColumns="auto_fit" >
    </GridView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        tools:context=".MainActivity" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doRollout"
            android:text="@string/button_estimate" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doRollout1"
            android:text="@string/button_roll" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity" >

        <TextView
            android:id="@+id/rollout_results"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="90dp" />
    </LinearLayout>

</LinearLayout>